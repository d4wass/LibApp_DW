@model IEnumerable<LibApp.Models.Book>

@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<p>
    <a class="btn btn-primary" asp-action="New">New Book</a>
</p>

<table id="books" class="table table-hover">
    <thead>
        <tr>
            <th>Book</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#books").DataTable({
                ajax: {
                    url: "/api/Books",
                    dataSrc: ""
                },
                
                columns: [
                    {
                        data: "name",
                        render: function (data, type, book) {
                            return `<a href="customers/edit/${book.id}">${book.name}</a>`;
                        },
                    },
                    {
                        data: "genre.name",
                    },
                    {
                        render: function (data, type, book) {
                            return `<a href="books/details/${book.id}">details</a>`
                        }
                    }
                ]
            });
        });
    </script>
}
